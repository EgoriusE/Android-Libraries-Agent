<idea-plugin>
    <id>Android Project Generator Protype</id>
    <name>Android Project Generator</name>
    <vendor>

    </vendor>
    <!--    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>-->

    <!--    <description><![CDATA[-->
    <!--    Enter short description for your plugin here.<br>-->
    <!--    <em>most HTML tags may be used</em>-->
    <!--    ]]></description>-->

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>
    <depends>org.jetbrains.kotlin</depends>


    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="org.intellij.sdk.action.GroupedActions" text="Android Project Generator" popup="true">
            <add-to-group group-id="NewGroup" anchor="last"/>

            <action id="GeneratorIdeaQuickList"
                    class="actions.QuickListAction" text="Generator List Popup..."
                    description="Bla bla bla ">
                <keyboard-shortcut keymap="Mac OS X" first-keystroke="shift ctrl A"/>
                <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="shift ctrl A"/>
                <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt A"/>
            </action>

            <separator text="Network"/>

            <action id="RetrofitAction"
                    class="actions.RetrofitAction" text="Add Retrofit"
                    description="Add Retrofit dependencies and some boilerplate code.">
            </action>

            <action id="HttpLoggingInterceptorAction"
                    class="actions.HttpLoggingInterceptorAction" text="Add Okhttp Logging Interceptor"
                    description="Add Okhttp Logging Interceptor dependency and some boilerplate code.">
            </action>

            <separator text="Data"/>

            <action
                    id="RoomAction"
                    class="actions.RoomAction" text="Add Room"
                    description="Add room dependencies and some boilerplate code.">
            </action>

            <separator text="Di"/>

            <action id="KoinAction"
                    class="actions.KoinAction" text="Add Koin"
                    description="Add koin dependencies and some boilerplate code.">
            </action>

            <action id="HiltAction"
                    class="actions.HiltAction" text="Add Hilt"
                    description="Add Hilt dependencies and some boilerplate code.">
            </action>

            <action id="DaggerAction"
                    class="actions.DaggerAction" text="Add Dagger"
                    description="Add Dagger dependencies and some boilerplate code.">
            </action>

            <separator text="Other"/>

            <action id="TimberAction"
                    class="actions.TimberAction" text="Add Timber"
                    description="Add Timber dependencies and some boilerplate code.">
            </action>

            <action id="FirebaseAction"
                    class="actions.FirebaseAction" text="Add Firebase"
                    description="Add Firebase and some boilerplate code.">
            </action>

        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="services.NotificationsFactory"/>
        <projectService serviceImplementation="core.ActionHandler"/>
    </extensions>
</idea-plugin>